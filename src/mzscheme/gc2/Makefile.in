../mzscheme2k: ctok $(OBJS)
	$(CC) -o ../mzscheme2k $(OBJS) $(LIBS)

ctok: lex.yy.c
	gcc -g -o ctok lex.yy.c

lex.yy.c: $(srcdir)/ctok.lex
	flex -olex.yy.c $(srcdir)/ctok.lex

clean:
	/bin/rm -f ctok lex.yy.c ../mzscheme2k *.o $(XSRCDIR)/*
