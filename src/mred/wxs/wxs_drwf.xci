
@MACRO ZeroReturn[p] = if (x<p> <= 0) return scheme_void;
@MACRO ZeroBoundary[p] = if (x<p> < 0) x<p> = 0;

@MACRO CheckRgn[p] = if (x<p> && (x<p>->GetDC() != ((wxDC *)((Scheme_Class_Object *)obj)->primdata))) WITH_VAR_STACK(scheme_arg_mismatch(METHODNAME("dc<%>","set-clipping-region"), "provided a different dc's region: ", p[<p>]));

